<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginSignin.LoginActivity"
        android:background="#ffffff">

    <ImageView
            android:layout_width="291dp"
            android:layout_height="129dp"
            app:srcCompat="@drawable/img_background"
            android:id="@+id/imageView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtUsername"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_margin="10dp"
            android:hint="@string/edtUsername"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtPassMoi"
            android:hint="@string/edtPassword"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtUsername"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:password="true"
            android:layout_margin="10dp"/>

    <CheckBox
            android:text="Nhớ mật khẩu?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbNhoMatKhau"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtPassMoi"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_margin="10dp"/>

    <Button
            android:text="@string/btnDangNhap"
            android:layout_height="wrap_content"
            android:id="@+id/btnDangNhap"
            android:layout_marginTop="48dp"
            android:textColor="@color/dungcustom8"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/cbNhoMatKhau"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/ic_button"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:text="@string/txtDangKy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDangKy"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            android:textColor="@color/dungcustom5"
            android:textSize="25dp"/>

</android.support.constraint.ConstraintLayout>