<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Sach.SachActivity"
        android:background="#ffffff">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Nhập mã sách"
            android:id="@+id/edtMaSach"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.503"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/spSach"
            android:background="@color/dungcustom4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtTacGiaSach"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spSach"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:hint="Nhập tên tác giả"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Nhập nhà xuất bản"
            android:ems="10"
            android:id="@+id/edtNXBSach"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtTacGiaSach"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtGiaBia"
            android:hint="Nhập giá bìa sách"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtNXBSach"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtSoLuongSach"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtGiaBia"
            android:layout_marginEnd="8dp"
            android:hint="Nhập số lượng"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>

    <Button
            android:text="@string/btnThemSach"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnThemSach"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/edtSoLuongSach"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:background="@drawable/ic_button_sign_up"/>

    <Button
            android:text="@string/btnHuyTheLoai"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnHuyBoSach"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/edtSoLuongSach"
            android:background="@drawable/ic_button_sign_up"/>

    <Button
            android:text="@string/btnDanhSachSach"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:id="@+id/btnDanhSachSach"
            android:layout_marginTop="65dp"
            app:layout_constraintTop_toBottomOf="@+id/edtSoLuongSach"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:background="@drawable/ic_button_sign_up"/>

    <TextView
            android:text="Mã thể loại"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/edtMaSach"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:id="@+id/textView2"/>

</android.support.constraint.ConstraintLayout>